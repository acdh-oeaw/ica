{
  "name": "Node.js & TypeScript",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "18-bullseye"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "bradlc.vscode-tailwindcss",
        "dbaeumer.vscode-eslint",
        "editorconfig.editorconfig",
        "esbenp.prettier-vscode",
        "mikestead.dotenv",
        "stylelint.vscode-stylelint"
      ]
    }
  },
  "features": {
    "github-cli": "latest"
  },
  "forwardPorts": [3000],
  "postCreateCommand": "pnpm install",
  "remoteUser": "node"
}
